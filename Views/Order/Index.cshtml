@{
    ViewData["title"] = "Order";
    int Id = 0;
}

<form method="post">
    <div>
        <div class="row">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(ViewBag.Msg)){
                    <div>
                        <label>Transaction Status: @ViewBag.Msg</label>
                    </div>
                }
                <div>
                    <label>Order ID</label>
                    <input type="number" asp-for="@Id" class="form-control" />
                </div>
                <div>
                    <button type="submit" asp-route-Id="@Id">DELETE ORDER</button>
                </div>
            </div>
        </div>
    </div>
</form>
