@using TugasAsinkron2.Models.DataContext
@model Supplier
@{
	ViewData["title"] = "Update Supplier";
}


<form method="post">
	<h1>New Supplier</h1>
	<div class="mb-1">
		<label for="CompanyName" class="form-label">Nama Perusahaan</label>
		<input asp-for="CompanyName" class="form-control" >
	</div>

	<div class="mb-1">
		<label for="ContactName" class="form-label">Nama Kontak</label>
		<input asp-for="ContactName" class="form-control" >
	</div>

	<div class="mb-1">
		<label for="ContactTitle" class="form-label">Judul Kontak</label>
		<input asp-for="ContactTitle" class="form-control" >
	</div>

	<div class="mb-1">
		<label for="City" class="form-label">Kota</label>
		<input asp-for="City" class="form-control" >
	</div>

	<div class="mb-1">
		<label for="Country" class="form-label">Negara</label>
		<input asp-for="Country" class="form-control">
	</div>

	<div class="mb-1">
		<label for="Phone" class="form-label">Nomor Telepon</label>
		<input asp-for="Phone" class="form-control" >
	</div>

	<div class="mb-1">
		<label for="Fax" class="form-label">Nomor Fax</label>
		<input asp-for="Fax" class="form-control" >
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success" style="margin-top:10px;margin-bottom:5px">UPDATE SUPPLIER</button>
	</div>
</form>

@section Scripts {
	<script type="text/javascript">

	</script>
}